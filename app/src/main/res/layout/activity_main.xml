<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgCard"
            android:layout_width="200sp"
            android:layout_height="195sp"
            android:layout_gravity="center"
            android:layout_margin="110sp"
            android:layout_marginTop="30sp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pnp" />

        <TextView
            android:id="@+id/txtselamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7sp"
            android:text="Selamat Datang di Politeknik Negeri Padang"
            android:textAlignment="center"
            android:textColor="#FF5722"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtLimau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="70sp"
            android:text="Limau Manih, Padang, Sumbar"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnmi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FB8C00"
            android:text="Manajemen Informatika"
            android:textColorLink="#FF9800" />

        <Button
            android:id="@+id/btnteknik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FB8C00"
            android:text="Teknik Komputer "
            android:textColorLink="#FF9800" />

        <Button
            android:id="@+id/btngaleri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FB8C00"
            android:text="Galeri Photo"
            android:textColorLink="#FF9800" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>